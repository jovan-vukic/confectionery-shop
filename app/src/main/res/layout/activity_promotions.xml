<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/logo_promotions_activity"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_t"/>
    <View
            android:id="@+id/line_promotions_activity"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/holo_purple"
            android:layout_below="@id/logo_promotions_activity"/>

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager_promotions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_promotions_activity"
            android:layout_margin="64dp"/>

    <Button
            android:id="@+id/previous_btn_promotions_activity"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="@string/previous_symbol"
            android:textColor="@android:color/holo_purple"
            android:backgroundTint="@android:color/transparent"
            android:layout_toStartOf="@+id/view_pager_promotions"
            android:layout_marginTop="448dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="-64dp"/>
    <Button
            android:id="@+id/next_btn_promotions_activity"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="@string/next_symbol"
            android:textColor="@android:color/holo_purple"
            android:backgroundTint="@android:color/transparent"
            android:layout_alignParentEnd="true" android:layout_toEndOf="@+id/view_pager_promotions"
            android:layout_marginTop="448dp"
            android:layout_marginStart="-64dp"
            android:layout_marginEnd="2dp"/>
</RelativeLayout>
